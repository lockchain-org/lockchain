[Unit]
Description=LockChain Unlock (%i)
After=lockchain.service
Requires=lockchain.service
ConditionPathExists=/etc/lockchain.toml

[Service]
Type=oneshot
User=lockchain
Group=lockchain
Environment=LOCKCHAIN_CONFIG=/etc/lockchain.toml
ExecStart=/usr/bin/lockchain-cli --config ${LOCKCHAIN_CONFIG} unlock --dataset %I
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
